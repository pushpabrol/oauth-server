<!DOCTYPE html>
<html lang="en">

<% include ../../common/header %>

    <body>
        <div id="wrapper" class="toggled">
            <% include ../../common/sidebar %>

                <!-- Page Content -->
                <div id="page-content-wrapper">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                <h1><span class="fa fa-plus"></span> Create Client</h1>


                                <!-- CREATE FORM -->
                                <form action="/management/clients/create" method="post">
                                    <div class="form-group">
                                        <label>Client ID:</label>
                                        <input type="text" class="form-control" name="client_id" value="<%= data.client_id %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Client Secret</label>
                                        <input type="text" class="form-control" name="client_secret" value="<%= data.client_secret %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Name</label>
                                        <input type="text" class="form-control" name="name" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Trusted</label>
                                        <input type="checkbox" class="form-control" name="trusted">
                                    </div>
                                    <div class="form-group">
                                        <label>Redirect URIs</label>
                                        <textarea rows="8" class="form-control" name="redirect_uris"> </textarea>
                                    </div>

                                    <button type="submit" class="btn btn-warning btn-lg">Create</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /#page-content-wrapper -->

        </div>
        <!-- /#wrapper -->

        <% include ../../common/scripts %>

    </body>

</html>