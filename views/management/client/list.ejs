<!DOCTYPE html>
<html lang="en">

<% include ../../common/header %>

  <body>
    <div id="wrapper" class="toggled">
      <% include ../../common/sidebar %>

        <!-- Page Content -->
        <div id="page-content-wrapper">
          <div class="container-fluid">
            <div class="row">
              <div class="col-lg-12">
                <h1><span class="fa fa-info"></span> Clients</h1>
                <table class="table">
                  <thead class="thead-inverse">
                    <tr>
                      <th>Name</th>
                      <th>Client Id | Secret</th>
                      <th>Redirect URIs</th>
                      <th>Trusted</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for (var i = 0; i < clients.length; i++) { %>
                      <tr>
                        <td><%= clients[i].name %></td>
                        <td><%= clients[i].client_id %> |  <a class="button" href="#<%= clients[i].client_id %>">Show secret</a>
                            <div id="<%= clients[i].client_id %>" class="overlay">
                              <div class="popup">
                                <h2>Client_Secret</h2>
                                <a class="close" href="#">&times;</a>
                                <div class="content">
                                  <%= clients[i].client_secret %>
                                </div>
                              </div>
                            </div>
                        </td>
                        <td>
                          <%= clients[i].redirect_uris %>
                        </td>
                        <td>
                          <%= clients[i].isTrusted %>
                        </td>
                        <td>
                          <a class="update btn btn-warning btn-small" href="/management/clients/<%= clients[i].client_id %>/edit">Update</a>
                          <a class="delete btn btn-warning btn-small" data-target="/management/clients/<%= clients[i]._id %>" href="#" onclick="deleteResource(this);">Delete</a>

                        </td>
                      </tr>
                      <% } %>
                        <tbody>
                </table>

                <a href="/management/clients/create" class="btn btn-warning btn-lg">Create</a>
                </div>
              </div>
            </div>
          </div>
          <!-- /#page-content-wrapper -->

        </div>
        <!-- /#wrapper -->

        <% include ../../common/scripts %>

  </body>

</html>