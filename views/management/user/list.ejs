<!DOCTYPE html>
<html lang="en">

<% include ../../common/header %>

    <body>
        <div id="wrapper" class="toggled">
            <% include ../../common/sidebar %>

                <!-- Page Content -->
                <div id="page-content-wrapper">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                <h1><span class="fa fa-info"></span> Users</h1>
                                <table class="table">
                                    <thead class="thead-inverse">
                                        <tr>
                                            <th>Email</th>
                                            <th>Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for (var i = 0; i < users.length; i++) { %>
                                            <tr>
                                                <td>
                                                    <%= users[i].email %>
                                                </td>
                                                <td>
                                                    <%= users[i].givenName %> <%= users[i].familyName %>  
                                                </td>                                                
                                                <%  if(users[i].isAdmin === false) { %>
                                                    <td>
                                                        <a class="update btn btn-warning btn-small" href="/management/users/<%= users[i]._id %>/edit">Update</a>
                                                        <a class="delete btn btn-warning btn-small" data-target="/management/users/<%= users[i]._id %>" href="#" onclick="deleteResource(this);">Delete</a>

                                                    </td>
                                                    <% }  else { %>
                                                        <td>
                                                            Admin User

                                                        </td>

                                                        <% } %>
                                            </tr>
                                            <% } %>
                                                <tbody>
                                </table>
                                <a href="/management/users/create" class="btn btn-warning btn-lg">Create</a>

                            </div>
                        </div>
                    </div>
                </div>
                <!-- /#page-content-wrapper -->

        </div>
        <!-- /#wrapper -->

        <% include ../../common/scripts %>



    </body>

</html>